{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "array-callback-return": ["off"],
      "import/extensions": ["off"],
      "no-console": ["off"],
      "no-mixed-operators": ["off"],
      "no-plusplus": [
        "warn",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"],
      "max-len": [
        "warn",
        {
          "code": 120,
          "ignoreComments": true,
          "ignoreUrls": true
        }
      ]
    }
}
